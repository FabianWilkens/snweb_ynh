{
    "name": "Standard Notes",
    "id": "snweb",
    "packaging_format": 1,
    "description": {
        "en": "The Standard Notes Web App. An end-to-end encrypted note-taking app. Web, Mac, Windows, Linux, iOS, and Android."
    },
    "version": "3.6.2~ynh1",
    "url": "https://github.com/standardnotes/web",
    "license": "AGPL-3.0-or-later",
    "maintainer": {
        "name": "Fabian Wilkens",
        "email": "46000361+FabianWilkens@users.noreply.github.com"
    },
    "requirements": {
        "yunohost": ">= 4.1.2"
    },
    "multi_instance": true,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for snweb",
                    "fr": "Choisissez un domaine pour snweb",
                    "de": "Wähle einen Domain Namen für snweb"
                },
                "example": "example.com"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "help": {
                    "en": "A public application means that anyone can access this site."
                },
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?",
                    "de": "Ist die Application Öffendlich?"
                },
                "default": false
            },
            {
                "name": "snserver_domain",
                "type": "string",
                "ask": {
                    "en": "Choose the default Standard Notes Syncing Server",
                    "de": "Wähle den Standard Notes Syncing Server"
                },
                "default": "sync.standardnotes.org"
            }
        ]
    }
}
